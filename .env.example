# Environment variables for Room Booking System

# Database Configuration
# MongoDB connection string (required)
DATABASE_URL="mongodb://username:password@localhost:27017/room_booking?authSource=admin"

# MongoDB replica set is required for transactions in Prisma
# If you need transactions, set up a replica set: https://pris.ly/d/mongodb-replica-set

# Email Configuration
# SMTP server settings
MAIL_HOST="smtp.example.com"
MAIL_PORT="587"
MAIL_SECURE="false"  # Set to "true" for SSL/TLS
MAIL_USER="user@example.com"
MAIL_PASSWORD="your-smtp-password"
MAIL_FROM="Room Booking <no-reply@roombooking.com>"

# Application Configuration
# Port for the application to listen on (optional, default: 7789)
PORT="7789"

# JWT Authentication (recommended for production)
JWT_SECRET="your-secret-key-here"
JWT_EXPIRES_IN="1d"  # Token expiration time
REFRESH_TOKEN_EXPIRES_IN="7d"  # Refresh token expiration time
